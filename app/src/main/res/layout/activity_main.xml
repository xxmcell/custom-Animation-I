<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.it.jason.mydiyview.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.it.jason.mydiyview.view.WifView
            android:id="@+id/wifi"
            android:background="#0f0"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <com.it.jason.mydiyview.view.musicLoading
            android:id="@+id/music"
            android:background="#000"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.it.jason.mydiyview.view.WaterLoading
            android:id="@+id/waterloading"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="#ff0011"
            android:text="Loading"
            android:textSize="60sp" />
        <com.it.jason.mydiyview.view.BarChange
            android:layout_width="200dp"
            android:layout_height="150dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.it.jason.mydiyview.view.Ball
            android:padding="3dp"
            android:background="#000"
            android:layout_width="200dp"
            android:layout_height="150dp" />
        <com.it.jason.mydiyview.view.Balls
            android:padding="3dp"
            android:background="#fff"
            android:layout_width="200dp"
            android:layout_height="150dp" />
    </LinearLayout>
    <Button
        android:text="ArcMenu"
        android:id="@+id/bt_arc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
